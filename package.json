{
  "name": "medieval-source-book-11ty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
  "build:css": "sass --load-path=../_sass styles_feeling_responsive.scss:../assets/css/styles_feeling_responsive.css --no-source-map",
    "start": "npm run build:css && npx @11ty/eleventy --serve --config .eleventy.js",
     "build": "npm run build:css && npm run sanitize-md && npx @11ty/eleventy --config .eleventy.js",
     "sanitize-md": "node ./scripts/sanitize-md.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "sass": "^1.66.1",
    "markdown-it": "^13.0.1"
  }
}
